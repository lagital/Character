<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="com.sam.team.character.viewmodel.Category"/>
        <variable
            name="category"
            type="Category" />
        <variable
            name="plusclick"
            type="android.view.View.OnClickListener" />
        <variable
            name="editclick"
            type="android.view.View.OnClickListener" />
    </data>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/category_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/text_display1_type"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="@{category.name}"/>

            <LinearLayout
                android:id="@+id/category_actions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_menu_edit"
                    android:contentDescription="@string/system_item_add_icon"
                    android:onClick="@{editclick}"/>

                <ImageButton
                    android:id="@+id/btn_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_menu_add"
                    android:contentDescription="@string/system_item_add_icon"
                    android:onClick="@{plusclick}"/>

            </LinearLayout>

        </RelativeLayout>
</layout>